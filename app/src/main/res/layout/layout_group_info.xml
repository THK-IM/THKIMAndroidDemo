<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ly_header"
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <RelativeLayout
            android:id="@+id/ly_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="14dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <androidx.emoji2.widget.EmojiTextView
                android:id="@+id/tv_update_avatar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/update_avatar"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="gone" />

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_array_right" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@id/iv_arrow"
            android:layout_toEndOf="@id/ly_avatar">

            <androidx.emoji2.widget.EmojiTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <androidx.emoji2.widget.EmojiTextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/forth_text_color"
                    android:textSize="12sp" />

                <androidx.emoji2.widget.EmojiTextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/forth_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <com.thinking.im.demo.ui.component.widget.SettingItemLayout
        android:id="@+id/ly_introduce"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="14dp" />

    <androidx.emoji2.widget.EmojiTextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:paddingHorizontal="14dp"
        android:textColor="@color/forth_text_color"
        android:textSize="14sp" />

    <com.thinking.im.demo.ui.component.widget.SettingItemLayout
        android:id="@+id/ly_remark"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="14dp" />

</LinearLayout>